@inject IDialogService DialogService
@inherits CourseEnrollmentDialogBase

<MudDialog>
    <DialogContent>
        <MudSimpleTable Hover="true" Dense="true" FixedHeader="true" Style="height:300px">
            <thead>
                <tr>
                    @foreach (var h in headings)
                    {
                        <th>@h</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var row in rows)
                {
                <tr>
                    @foreach (var x in row.Split())
                    {
                        <td>@x</td>
                    }
                    <MudButton @onclick="BookDialogPress" Variant="Variant.Filled" Size="Size.Small" Color="Color.Primary" Class="ma-2">Book</MudButton>
                </tr>
                }
            </tbody>
        </MudSimpleTable>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Filled" Color="Color.Secondary">Cancel</MudButton>
    </DialogActions>
</MudDialog>

